---
type Props = {
  link: string;
  target?: string;
  customClass?: string;
};

const { link, customClass, target = "_blank" } = Astro.props;
---

<a
  class={`group cursor-pointer gap-2 rounded-md transition-all duration-300 hover:bg-bg-canvas-light p-4 ${customClass}`}
  target={target}
  href={link}
>
  <div class="flex flex-row justify-between">
    <slot />

    <div class="hidden items-center gap-4 group-hover:flex">
      <svg width="18" height="18" viewBox="0 0 18 18" fill="none">
        <path
          d="M5.25 12.75L12.75 5.25"
          stroke="#999999"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M5.25 5.25H12.75V12.75"
          stroke="#999999"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </div>
  </div>
  <slot name="link" />
</a>
